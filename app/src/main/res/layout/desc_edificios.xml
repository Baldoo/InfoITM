<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="76dp"
        android:src="@drawable/ed_a"
        app:layout_constraintBottom_toTopOf="@+id/Edificio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Edificio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edificio B"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img" />


    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edificio">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp">

            <TextView
                android:id="@+id/tit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios a usuarios"
                android:textSize="30dp"
                android:textStyle="italic"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/desc1"
                android:layout_below="@+id/tit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Orientación para uso de los servicios (primer semestre).\n- Consulta interna o préstamo en sala.\n- Préstamo a domicilio (o externo).\n- Préstamo de cubículos de estudio.\n- Catalogo para público.\n- Acceso libre a internet.\n- Acceso a recursos bibliográficos electrónicos"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo 2"
                android:textSize="30dp"
                android:textStyle="italic"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/desc1"/>
            <TextView
                android:id="@+id/desc2"
                android:text="Descripcion 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tit2"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo 3"
                android:textSize="30dp"
                android:textStyle="italic"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/desc2"/>
            <TextView
                android:id="@+id/desc3"
                android:text="Descripcion 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tit3"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>